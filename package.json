{
  "name": "classless-component",
  "version": "0.1.0",
  "description": "A utility method to create react, preact, inferno components without using class keyword",
  "main": "./dist/index.js",
  "keywords": [
    "preact",
    "vdom",
    "react",
    "babel"
  ],
  "author": "staydecent",
  "license": "MIT",
  "homepage": "https://github.com/staydecent/classless-component#readme",
  "bugs": {
    "url": "https://github.com/staydecent/classless-component/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staydecent/classless-component.git"
  },
  "scripts": {
    "std": "standard --verbose | snazzy",
    "prebuild": "npm run std",
    "build": "babel index.js | uglifyjs -c warnings=false -o dist/index.js",
    "pretest": "npm run std",
    "test": "mocha --compilers js:babel-register"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "inferno-component": "^3.6.4",
    "inferno-create-element": "^3.6.4",
    "inferno-server": "^3.6.4",
    "mocha": "^3.4.2",
    "preact": "^8.2.0",
    "preact-render-to-string": "^3.6.3",
    "react": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "uglify-es": "^3.2.0",
    "uglifyjs": "^2.4.11"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  }
}
